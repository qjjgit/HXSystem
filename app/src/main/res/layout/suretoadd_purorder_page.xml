<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="添加进货单"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/img_addingPurOrder"
        android:layout_width="231dp"
        android:layout_height="223dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="供货商"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/addPurOrder_supplier"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/addPurOrder_supplier"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="16dp"
        android:hint="可不填"
        android:inputType="text"
        android:maxLength="16"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/img_addingPurOrder" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="进货日期"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/addPurOrder_date"
        app:layout_constraintStart_toStartOf="@+id/textView8" />

    <Button
        android:id="@+id/addPurOrder_date"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        android:text="请选择"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/addPurOrder_supplier" />

    <Button
        android:id="@+id/addPurOrder_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="取消"
        app:layout_constraintStart_toStartOf="@+id/img_addingPurOrder"
        app:layout_constraintTop_toBottomOf="@+id/addPurOrder_date" />

    <Button
        android:id="@+id/addPurOrder_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="提交"
        app:layout_constraintEnd_toEndOf="@+id/img_addingPurOrder"
        app:layout_constraintTop_toBottomOf="@+id/addPurOrder_date" />

</androidx.constraintlayout.widget.ConstraintLayout>